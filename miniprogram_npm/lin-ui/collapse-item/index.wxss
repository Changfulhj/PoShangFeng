.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.container-title {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  align-items: center;
  font-size: 48rpx;
  font-weight: 800;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: rgb(68, 68, 68);
  box-shadow: 0rpx 2rpx 3rpx 0rpx rgb(216, 216, 216);
  background-color: rgb(226, 242, 248);
}

.container-title-l-icon {
  transition: .3s
}

.container-body {
  width: 100%;
  color: #888;
  box-sizing: border-box;
  font-size: 38rpx;
  transition: height .3s ease-in-out;
  overflow: hidden;
}

.container-body-wrapper {
  position: relative;
  padding: 10rpx
}