.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
}

.container-title {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  align-items: center;
  font-size: 48rpx;
  font-weight: 800;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: rgb(255, 255, 255);
  border-bottom: 1rpx solid rgb(247, 188, 188);
  background-color: rgb(240, 117, 117);
}

.container-title-l-icon {
  transition: .3s
}

.container-body {
  width: 100%;
  color: #888;
  box-sizing: border-box;
  font-size: 38rpx;
  transition: height .3s ease-in-out;
  overflow: hidden;
}

.container-body-wrapper {
  position: relative;
  padding: 10rpx
}