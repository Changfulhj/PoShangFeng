<!--pages/classstudy/classstudy.wxml-->
<view class="classstudy-container">
  <video src="http://192.168.8.110:8080/data/{{currentVedio.name}}.mp4"></video>

  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">课程目录</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">练习/考试</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">讨论</view>
  </view>

  <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
    <swiper-item class="menu">
      <view class="class-menu">
        <block>
          <l-collapse class="class-menu" wx:for="{{thisviedo.menu}}" type="accordion">
            <l-collapse-item l-title-class="l-collapse-title-class" l-class="l-collapse-class" title="{{item.chaptername}}">
              <view wx:for="{{item.kids}}" bindtap="gotoviedo" data-viedo-id="{{item}}">{{item.name}}</view>
            </l-collapse-item>
          </l-collapse>
        </block>
      </view>
    </swiper-item>
    <swiper-item class="exam">
      <text>这是练习和考试</text>
    </swiper-item>

    <swiper-item class="talk">
      <text>这是讨论区</text>
    </swiper-item>

  </swiper>

</view>